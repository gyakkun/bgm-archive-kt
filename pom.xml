    <modelVersion>4.0.0</modelVersion>

    <artifactId>bgm-archive-kt</artifactId>
    <groupId>moe.nyamori</groupId>
    <version>0.30-SNAPSHOT</version>
    <packaging>jar</packaging>

    <name>bgm-archive-kt</name>

    <properties>
