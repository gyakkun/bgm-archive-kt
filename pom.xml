        <kotlin.code.style>official</kotlin.code.style>
        <lts.jdk.version>21</lts.jdk.version>
        <kotlin.compiler.jvmTarget>${lts.jdk.version}</kotlin.compiler.jvmTarget>
        <maven.compiler.source>${lts.jdk.version}</maven.compiler.source>
        <maven.compiler.target>${lts.jdk.version}</maven.compiler.target>
        <kt.major.version>2.1.21</kt.major.version>
        <kotlin.compiler.incremental>true</kotlin.compiler.incremental>
    </properties>

    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>org.jdbi</groupId>
                <artifactId>jdbi3-bom</artifactId>
                <type>pom</type>
